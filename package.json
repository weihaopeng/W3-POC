{
  "name": "w3-poc",
  "keywords": [
    "Web3",
    "blockchain",
    "consensus",
    "consensusless"
  ],
  "version": "0.1.0",
  "type": "module",
  "description": "A large-scale P2P application protocol testbed based on IPFS and Libp2p for testing W3 which is a consensusless blockchain.",
  "scripts": {
    "start": "cross-env DEBUG=w3* vite",
    "test": "cross-env DEBUG=w3* mocha --exit --ui bdd \"./test/**/*.test.js\"",
    "deps": "depcruise --include-only \"^src\" --output-type dot src | dot -T svg > architecture.svg",
    "version": "auto-changelog -p && git add CHANGELOG.md",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "stage": "git add . && git commit -m \"$npm_package_version\" && git tag $npm_package_version && git push && git push --tags",
    "build": "vite build",
    "serve": "vite preview"
  },
  "author": "wangqing@mq-ai.cn",
  "license": "MIT",
  "dependencies": {
    "@chainsafe/libp2p-noise": "^8.0.0",
    "@libp2p/bootstrap": "^2.0.0",
    "@libp2p/mplex": "^5.1.1",
    "@libp2p/peer-id-factory": "^1.0.18",
    "@libp2p/webrtc-direct": "^2.0.2",
    "@libp2p/webrtc-star": "^3.0.0",
    "@libp2p/websockets": "^3.0.0",
    "@mapbox/node-pre-gyp": "^1.0.10",
    "ant-design-vue": "^2.2.5",
    "cross-env": "^7.0.3",
    "debug": "^4.3.3",
    "dotenv": "^16.0.1",
    "echarts": "^5.3.3",
    "eventemitter2": "^6.4.7",
    "gauss": "^0.2.12",
    "javascript-state-machine": "^3.1.0",
    "libp2p": "^0.38.0",
    "lodash": "^4.17.21",
    "vue": "^3.0.5",
    "vue-router": "^4.0.11",
    "wrtc": "^0.4.7"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^1.3.0",
    "@vue/compiler-sfc": "^3.0.5",
    "auto-changelog": "^2.3.0",
    "babel-plugin-import": "^1.13.3",
    "chai": "^4.3.4",
    "chai-exclude": "^2.1.0",
    "dependency-cruiser": "^11.7.1",
    "ethereum-cryptography": "^1.1.2",
    "ethereumjs-wallet": "^1.0.2",
    "inquirer": "^8.2.4",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "pug": "^3.0.2",
    "sass": "^1.54.8",
    "typescript": "^4.3.2",
    "unplugin-vue-components": "^0.22.4",
    "vite": "^2.8.6",
    "vite-plugin-components": "^0.13.2",
    "vite-plugin-style-import": "^1.1.1"
  },
  "engines": {
    "node": ">= 16.0.0"
  }
}
